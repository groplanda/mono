        .contact__form-row
          .contact__form-group
            input(type="text" name="name" placeholder="Ваше имя" data-js-validators="required").contact__form-input
          .contact__form-group
            input(type="tel" name="phone" placeholder="Ваш телефон" data-mask="phone" data-js-validators="required").contact__form-input

        textarea(name="message" placeholder="Ваше сообщение").contact__form-input.contact__form-input_textarea

        label.contact__form-checkbox
          input(type="checkbox", name="confirm" data-js="confirm").contact__form-checkbox-input
